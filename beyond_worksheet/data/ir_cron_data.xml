<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="team_scheduling_cron" model="ir.cron">
        <field name="name">Team Schedule Mail Notification</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="state">code</field>
        <field name="code">model._send_team_notifications_cron()</field>
        <field name="user_id" ref="base.user_root"/> <!-- Runs as the admin -->
        <field name="interval_type">weeks</field> <!-- Interval type: week -->
        <field name="interval_number">1</field> <!-- Runs once a week -->
        <field name="numbercall">-1</field> <!-- Run indefinitely -->
        <field name="doall" eval="False"/> <!-- If missed, don't catch up -->
        <field name="active" eval="True"/> <!-- Active -->
        <field name="nextcall" eval="(DateTime.today() + relativedelta(weekday=4, hour=17, minute=59, second=0))" />
    </record>

    <record id="rcti_invoice_cron" model="ir.cron">
        <field name="name">Generate site attendance invoice</field>
        <field name="model_id" ref="model_worksheet_attendance"/>
        <field name="state">code</field>
        <field name="code">model._generate_attendance_invoice_cron()</field>
        <field name="user_id" ref="base.user_root"/> <!-- Runs as the admin -->
        <field name="interval_type">weeks</field> <!-- Interval type: week -->
        <field name="interval_number">1</field> <!-- Runs once a week -->
        <field name="numbercall">-1</field> <!-- Run indefinitely -->
        <field name="doall" eval="False"/> <!-- If missed, don't catch up -->
        <field name="active" eval="True"/> <!-- Active -->
        <field name="nextcall" eval="(DateTime.today() + relativedelta(weekday=6, hour=0, minute=0, second=0))"/>
    </record>
</odoo>