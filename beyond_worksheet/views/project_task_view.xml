<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="project_task_view_form" model="ir.ui.view">
        <field name="name">project.task.form.view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Panel Serial Numbers" name="panel_ser_num" invisible="panel_count == 0">
                    <group>
                        <field name="panel_count"/>
                    </group>
                    <field name="panel_lot_ids">
                        <tree string="Panel Serial Numbers">
                            <field name="image"/>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="verification_time"/>
                            <field name="state"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page string="Inverter Serial Numbers" name="invet_ser_num" invisible="inverter_count == 0">
                    <group>
                        <field name="inverter_count"/>
                    </group>
                    <field name="inverter_lot_ids">
                        <tree string="Inverter Serial Numbers">
                            <field name="image"/>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="verification_time"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
                <page string="Battery Serial Numbers" name="battery_ser_num" invisible="battery_count == 0">
                    <group>
                        <field name="battery_count"/>
                    </group>
                    <field name="battery_lot_ids">
                        <tree string="Battery Serial Numbers">
                            <field name="image"/>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="verification_time"/>
                            <field name="state"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page string="Installation Checklist" name="installation_checklist" invisible="x_studio_type_of_service != 'New Installation'">
                    <widget name="checklist_widget"/>
                </page>
                <page string="Service Checklist" name="service_checklist" invisible="x_studio_type_of_service != 'Service'">
                    <group>
                        <field name="checklist_item_ids" widget="many2many_tags" invisible="1"/>
                        <field name="service_item_ids" widget="many2many_tags" invisible="1"/>
                        <field name="is_checklist" invisible="1"/>
                    </group>
                    <widget name="checklist_widget"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
