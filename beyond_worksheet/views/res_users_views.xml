<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_users_form_inherit" model="ir.ui.view">
        <field name="name">res.users.view.form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <field name="is_internal_user"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="invoice_amount"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='calendar']" position="after">
                <page string="Licence and Accreditations" name="license">
                    <group string="Electrical Licence">
                        <field name="contract_license_ids" colspan="4" nolabel="1">
                            <tree string="Electrical License" editable="inline">
                                <field name="type"/>
                                <field name="number"/>
                                <field name="expiry_date"/>
                                <field name="user_id" column_invisible="1"/>
                            </tree>
                        </field>
                        <group name="studio_group_ZRDTv_right" string="CEC Accreditation">
                            <field name="x_studio_cec_accreditation_number" string="CEC Accreditation Number"/>
                            <field name="x_studio_cec_accreditation_expiry_date"
                                   string="CEC Accreditation Expiry Date"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
