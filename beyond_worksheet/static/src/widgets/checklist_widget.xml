<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="beyond_worksheet.Checklist" owl="1">
        <div>
            <t t-foreach="this.state.data.checklist" t-as="checklist_item_id"
               t-key="checklist_item_id_index">
                <div class="g-col-sm-2">
                    <div class="o_horizontal_separator mt-4 mb-3 text-uppercase fw-bolder small">
                        <span t-out="checklist_item_id[1]"/>
                    </div>
                </div>
                <div t-if="checklist_item_id[2] == 'img'">
                    <div>
                        <t t-foreach="this.state.data.checklist_item"
                           t-as="checklist_item" t-key="checklist_item_index">
                            <div t-if="checklist_item_id[0] == checklist_item[0]"
                                 class="card-title p-2 bg-200"
                                 style="display: flex;">
                                <div class="o_squared_image card-img-top">
                                    <img t-att-src="'data:image/png;base64,' + checklist_item[4]"
                                         style="max-width: 250px; max-height: 250px;"/>
                                </div>
                                <div class="card-title p-2 m-0 bg-200">
                                    <span t-out="checklist_item[1]"/>
                                    <br/>
                                    <span t-out="checklist_item[2]"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
                <div t-if="checklist_item_id[2] == 'text'">
                    <t t-foreach="this.state.data.checklist_item"
                       t-as="checklist_item" t-key="checklist_item_index">
                        <div t-if="checklist_item_id[0] == checklist_item[0]"
                             class="card-title p-2 bg-200"
                             style="display: flex;">
                            <div class="o_squared_image card-img-top">
                                <span t-out="checklist_item[3]"/>
                            </div>
                            <div class="card-title p-2 m-0 bg-200">
                                <span t-out="checklist_item[1]"/>
                                <br/>
                                <span t-out="checklist_item[2]"/>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
